# $Id: Portfile 35946 2008-04-11 03:15:54Z raimue@macports.org $

PortSystem 1.0

name            baobab
version         2.4.2
categories      gnome
platforms       darwin
maintainers     raimue

description     Disk usage analyzer for GNOME
long_description \
                Baobab is a C/gtk+ application to analyse disk usage in any \
                Gnome environment. Baobab can easily scan either the whole \
                filesystem tree, or a specific user-requested directory branch \
                (local or remote).
homepage        http://www.marzocca.net/linux/baobab.html

master_sites    http://www.marzocca.net/linux/downloads/
checksums       md5     5c99413e18a07b562fbfd7f8c707ae07 \
                sha1    3236b8af640e385cc27de6814331b1ea5759e4cd \
                rmd160  eaabdb4377dc656c8f32a7c604c517b96697b5d9

depends_build   bin:grep:grep \
                bin:gawk:gawk
depends_lib     port:libgtop \
                port:gtk2 \
                port:libglade2 \
                port:gnome-vfs \
                port:gconf \
                port:libgnomeui \
                port:gettext

configure.args  --mandir=${prefix}/share/man

build.post_args baobab_LDFLAGS=''

livecheck.check regex
livecheck.regex {<li class="smalltext">v. ([0-9.]+)}
