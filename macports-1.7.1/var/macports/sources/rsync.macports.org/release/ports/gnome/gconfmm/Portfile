use_bzip2	yes
checksums 	md5     cd2c3c919dbf8f90f703680d2fa088b2 \
		sha1    1c130b3311c8307037126050bbfb4f8faa28819a \
		rmd160  933c045f1b6f71f5b6ecc9e73ac29d2f787f56d0
depends_lib	port:gtkmm port:gconf port:libiconv
