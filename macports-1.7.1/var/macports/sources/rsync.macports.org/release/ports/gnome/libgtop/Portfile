# $Id: Portfile 45416 2009-01-15 19:09:45Z jmr@macports.org $

PortSystem 1.0

name		libgtop
version		2.24.3
set branch  [join [lrange [split ${version} .] 0 1] .]
description	A library for gtop2
long_description \
		This is library for the gtop2, the GNOME 2.0 \
		version of top command. The top command is a tool \
		to display and update information about the top \
		cpu processes.
maintainers	nomaintainer
categories	gnome
platforms	darwin
homepage	http://www.gnome.org/
master_sites    gnome:sources/${name}/${branch}/
checksums	md5     051de81fd37d33e7abee828fd4c12cba \
		sha1    e7a5a0274d5295825d9cea3f58c93754edf5b145 \
		rmd160  4b864924e53c736ed7ce2b477946b9f5efbc27fe

depends_build   port:pkgconfig port:gtk-doc
depends_lib     path:lib/pkgconfig/glib-2.0.pc:glib2 \
		port:gettext
use_bzip2 	yes

configure.args	--mandir=${prefix}/share/man --infodir=${prefix}/share/info \
		--disable-static

livecheck.check regex
livecheck.url   http://ftp.gnome.org/pub/gnome/sources/${name}/${branch}/
livecheck.regex {LATEST-IS-(\d+(?:\.\d+)*)}
