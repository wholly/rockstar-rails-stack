# $Id: Portfile 41570 2008-11-06 10:29:25Z nox@macports.org $

PortSystem      1.0

name            gnome-backgrounds
version         2.24.0
set branch      [join [lrange [split ${version} .] 0 1] .]
maintainers     nomaintainer
categories      gnome
platforms       darwin 
description     A collection of backgrounds for GNOME 2.

long_description \
    $description

homepage        http://www.gnome.org/
master_sites    gnome:sources/$name/$branch/
use_bzip2       yes

checksums       md5     fb84a0b2e63dd0aaa47d490d2a43209f \
                sha1    3ceb98be1b49d7af6456b0ef2aefddca15e6146b \
                rmd160  8c6904ce238689d2efa4ce051d7f11066e335849

depends_build \
    port:intltool \
    port:gettext

use_parallel_build  yes

universal_variant   no

livecheck.check regex
livecheck.url   ftp://ftp.gnome.org/pub/gnome/sources/$name/$branch/
livecheck.regex {LATEST-IS-(\d+(?:\.\d+)*)}
