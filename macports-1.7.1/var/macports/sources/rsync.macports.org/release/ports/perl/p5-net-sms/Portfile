                      sha1 0fb69765499dda92d6a02d520ea7daa13e463201 \
                      rmd160 f1d54765de5489e3c846956ddb2eeae105fdf8ea

depends_lib-append    port:p5-libxml-enno \
                      port:p5-unicode-string \
                      port:p5-libwww-perl
