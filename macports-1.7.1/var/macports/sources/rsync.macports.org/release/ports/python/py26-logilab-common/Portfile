post-destroot {
   xinstall -m 644 -W ${worksrcpath} ChangeLog README \
      ${destroot}${prefix}/share/doc/${name}
   ln -s ${python.prefix}/bin/pytest ${destroot}${prefix}/bin/pytest2.6
}

