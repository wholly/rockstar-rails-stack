PortSystem 1.0

set langcode        el
name                aspell-dict-${langcode}
version             0.50-3
categories          textproc
maintainers         pguyot@kallisys.net openmaintainer
description         ${langcode} dictionary for aspell
long_description    ${description}
homepage	        http://aspell.net/
platforms	        darwin
universal_variant   no

master_sites	    gnu:aspell/dict/${langcode}
distname	        aspell-${langcode}-${version}
checksums	        md5     0ea2c42ceb9b91f7f5de2c017234ad37 \
                    sha1    f0242d02e45956f8fe5d8321d737ee4dc5d18931 \
                    rmd160  df6b86825ad3b3b448287c07cf4eaee986aa1320

use_bzip2           yes

depends_build       port:aspell

configure.pre_args  {}
configure.args      --vars \
                    ASPELL=${prefix}/bin/aspell \
                    WORD_LIST_COMPRESS=${prefix}/bin/word-list-compress

livecheck.regex     >aspell6\?-${langcode}-(.*?)\\.tar\\.

