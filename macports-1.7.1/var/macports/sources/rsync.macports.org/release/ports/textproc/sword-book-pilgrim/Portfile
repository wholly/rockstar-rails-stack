	xinstall -d -m 0755 ${destroot}${prefix}/share/sword
	system "cp -R ${workpath}/mods.d ${destroot}${prefix}/share/sword"
	system "cp -R ${workpath}/modules ${destroot}${prefix}/share/sword"
}

