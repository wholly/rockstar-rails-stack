# $Id: Portfile 30234 2007-10-22 23:12:14Z jmpp@macports.org $

PortSystem 1.0
name		kde
version		3.5.8
categories	kde
maintainers	nomaintainer
description	KDE Desktop bundle
long_description ${description}
platforms	darwin
homepage	http://www.kde.org/
master_sites	

depends_lib	port:kdelibs3 \
		port:kdebase3 \
		port:kdenetwork3 \
		port:kdepim3 \
		port:kdeutils3

distfiles

fetch		{ }
checksum	{ }
configure	{ }
build		{ }
destroot	{
		xinstall -d -m 755 ${destroot}${prefix}/share/doc/kde
		xinstall -m 444 ${portpath}/${filesdir}/README ${destroot}${prefix}/share/doc/kde/
		ui_msg "To start KDE, put \"exec ${prefix}/bin/startkde\" in your .xinitrc"
		ui_msg "If you have problems, refer to ${prefix}/share/doc/kde/README"
}

universal_variant	no

variant accessibility {
depends_lib-append port:kdeaccessibility3
}

variant dev_tools {
depends_lib-append port:kdesdk3 \
		   port:kdewebdev3
}

variant fun {
depends_lib-append port:kdeaddons3 \
                   port:kdeartwork3 \
		   port:kdeedu3 \
		   port:kdegames3 \
		   port:kdetoys3
}

variant graphics {
depends_lib-append port:kdegraphics3
}

variant all {
depends_lib-append port:kdeaccessibility3 \
		   port:kdeaddons3 \
		   port:kdeartwork3 \
		   port:kdeedu3 \
		   port:kdegames3 \
		   port:kdegraphics3 \
                   port:kdesdk3 \
                   port:kdetoys3 \
		   port:kdewebdev3
}
