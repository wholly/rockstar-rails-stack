# $Id: Portfile 48464 2009-03-22 23:46:33Z tommyd@macports.org $

PortSystem 1.0

name             monotone
version          0.43
categories       devel
maintainers      tommyd openmaintainer
description      A distributed version control system
long_description \
       monotone is a free distributed version control system. It provides \
       a simple, single-file transactional version store, with fully \
       disconnected operation and an efficient peer-to-peer synchronization \
       protocol. It understands history-sensitive merging, lightweight \
       branches, integrated code review and 3rd party testing.
homepage         http://monotone.ca/
platforms        darwin
master_sites     ${homepage}downloads/${version}/
checksums        md5     a9e82b899ff7f676f620c450d6aff4cf \
                 sha1    83aa15cbaa13735187f5b7bb8b97b2afcc40267f \
                 rmd160  00de77d604c82239e074d065114333276ee2673b

depends_lib      port:zlib \
                 port:libiconv \
                 port:gettext \
                 port:boost \
                 port:lua \
                 port:pcre \
                 port:sqlite3 \
                 port:botan

configure.args   --with-libiconv-prefix=${prefix} \
                 --infodir=${prefix}/share/info

test.run         yes
test.target      check
