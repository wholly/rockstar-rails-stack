+      case ${MACOSX_DEPLOYMENT_TARGET},$host in
+        10.0,*86*-darwin8*|10.0,*-darwin[[91]]*)
+          allow_undefined_flag='-undefined dynamic_lookup' ;;
+        10.[[012]]*)
+          allow_undefined_flag='-flat_namespace -undefined suppress' ;;
+        10.*)
+          allow_undefined_flag='-undefined dynamic_lookup' ;;
+      esac
+      ;;
