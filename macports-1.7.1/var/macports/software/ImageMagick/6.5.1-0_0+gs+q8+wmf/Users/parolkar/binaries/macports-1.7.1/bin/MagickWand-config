#!/bin/sh
#
# Configure options script for re-calling MagickWand compilation options
# required to use the MagickWand library.
#

prefix=/Users/parolkar/binaries/macports-1.7.1
exec_prefix=${prefix}
libdir=${exec_prefix}/lib
includedir=${prefix}/include/ImageMagick

usage="\
Usage: MagickWand-config [--cflags] [--cppflags] [--exec-prefix] [--ldflags] [--libs] [--prefix] [--version]"

if test $# -eq 0; then
      echo "${usage}" 1>&2
      echo "Example: gcc \`MagickWand-config --cflags --cppflags\` -o wand wand.c \`MagickWand-config --ldflags --libs\`" 1>&2
      exit 1
fi

while test $# -gt 0; do
  case "$1" in
    -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
    *) optarg= ;;
  esac
  case $1 in
    --prefix=*)
      prefix=$optarg
      ;;
    --prefix)
      echo $prefix
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      ;;
    --exec-prefix)
      echo $exec_prefix
      ;;
    --version)
      echo '6.5.1 Q8 '
      ;;
    --cflags)
      echo "-I${includedir} "
      ;;
    --cxxflags)
      echo '-O2 -Wall -W -D_THREAD_SAFE'
      ;;
    --cppflags)
      echo '-I/Users/parolkar/binaries/macports-1.7.1/include/ImageMagick'
      ;;
    --ldflags)
      echo '-L/Users/parolkar/binaries/macports-1.7.1/lib -L/Users/parolkar/binaries/macports-1.7.1/lib -L/usr/X11/lib -R/usr/X11/lib -L/Users/parolkar/binaries/macports-1.7.1/lib -lfreetype -lz -L/Users/parolkar/binaries/macports-1.7.1/lib'
      ;;
    --libs)
      echo "-L${libdir} -lMagickWand -lMagickCore -ltiff -lfreetype -ljpeg -L/Users/parolkar/binaries/macports-1.7.1/lib -lfontconfig -lexpat -lfreetype -lz -lXext -lSM -lICE -lX11 -lXt -lbz2 -lz -lm -lpthread -lltdl"
      ;;
    *)
      echo "${usage}" 1>&2
      exit 1
      ;;
  esac
  shift
done

